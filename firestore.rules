rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
  
    match /users/{userId} {
      // Anyone signed in can read all users
      allow read: if request.auth != null;
      
      // User can write only their own document OR admin can write any
      allow write: if request.auth != null && (request.auth.uid == userId || request.auth.uid == 'CSD7SWHAjpN00QNxXx9TMTG6ENv1');
    }
    
    match /jobs/{jobId} {
      // Any signed-in user can read and write jobs
      allow read, write: if request.auth != null;
    }
    
    // Add more rules here as needed
    
  }
}
